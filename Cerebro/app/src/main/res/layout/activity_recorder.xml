    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Select Dataset"
        android:id="@+id/datasetSelectLabel"
        android:gravity="center"
        android:layout_alignBottom="@+id/datasetSelectSpinner"
        android:layout_alignLeft="@+id/selectThoughtLabel"
        android:layout_alignStart="@+id/selectThoughtLabel" />

    <Spinner
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:id="@+id/datasetSelectSpinner"
        android:layout_below="@+id/mindwaveStatus"
        android:layout_alignRight="@+id/mindwaveStatus"
        android:layout_alignEnd="@+id/mindwaveStatus"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Add Dataset"
        android:id="@+id/datasetAddLabel"
        android:gravity="center"
        android:layout_alignTop="@+id/addThoughtLabel"
        android:layout_alignLeft="@+id/thoughtSelectSpinner"
        android:layout_alignStart="@+id/thoughtSelectSpinner" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:hint="Enter New Dataset"
        android:textSize="10dp"
        android:id="@+id/datasetAddField"
        android:layout_below="@+id/datasetAddLabel"
        android:layout_alignLeft="@+id/datasetAddLabel"
        android:layout_alignStart="@+id/datasetAddLabel" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Select Thought"
        android:id="@+id/selectThoughtLabel"
        android:gravity="center"
        android:layout_below="@+id/mindwaveStatus"
        android:layout_toLeftOf="@+id/datasetSelectSpinner"
        android:layout_toStartOf="@+id/datasetSelectSpinner"
        android:layout_marginTop="94dp" />

    <Spinner
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:id="@+id/thoughtSelectSpinner"
        android:layout_alignBottom="@+id/selectThoughtLabel"
        android:layout_toRightOf="@+id/selectThoughtLabel"
        android:layout_toEndOf="@+id/selectThoughtLabel" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Add Thought"
        android:id="@+id/addThoughtLabel"
        android:gravity="center"
        android:layout_above="@+id/thoughtAddField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:hint="Enter New Thought"
        android:textSize="10dp"
        android:id="@+id/thoughtAddField"
        android:layout_above="@+id/addThoughtButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Add Dataset"
        android:id="@+id/addDatasetButton"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/pairedStatus"
        android:layout_toEndOf="@+id/pairedStatus" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Add Thought"
        android:id="@+id/addThoughtButton"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/pairedStatus"
        android:layout_toStartOf="@+id/pairedStatus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record this Session"
        android:id="@+id/recordButton"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/selectThoughtLabel"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
